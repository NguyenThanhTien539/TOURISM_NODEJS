extends ../layouts/default.pug


block main
  h1.box-title Chỉnh sửa tài khoản quản trị
  .section-8
    form#setting-account-admin-edit-form
      .inner-group(style="display: none;")
        label(class="inner-label" for="id") id
        input(type="text" id="id" name="id" value=detailedAccountAdmin.id)
      .inner-group
        label(class="inner-label" for="fullName") Họ tên
        input(type="text" id="fullName" name="fullName" value=detailedAccountAdmin.fullName)
      .inner-group
        label(class="inner-label" for="email") Email
        input(type="email" id="email" name="email" value=detailedAccountAdmin.email)
      .inner-group
        label(class="inner-label" for="phone") Số điện thoại
        input(type="text" id="phone" name="phone" value=detailedAccountAdmin.phone) 
      .inner-group
        label(class="inner-label" for="role") Nhóm quyền
        select(id="role" name="role")
          option(value="") --Chọn nhóm quyền--
          each item in roleList
            option(value=item.id selected=(item.id == detailedAccountAdmin.role) ? true : false ) #{item.name}
      .inner-group
        label(class="inner-label" for="positionCompany") Chức vụ
        input(type="text" id="positionCompany" name="positionCompany" value=detailedAccountAdmin.positionCompany)
      .inner-group
        label(class="inner-label" for="status") Trạng thái
        select(id="status" name="status")
          option(value="initial" selected=(detailedAccountAdmin.status == "initial" ? true : false))  Khởi tạo
          option(value="active" selected=(detailedAccountAdmin.status == "active" ? true : false)) Hoạt động
          option(value="inactive" selected=(detailedAccountAdmin.status == "inactive" ? true : false)) Dừng hoạt động
      .inner-group
        label(class="inner-label" for="password") Mật khẩu
        input(type="text" id="password" name="password")
      .inner-group.inner-two-col
        label(class="inner-label" for="avatar") Ảnh đại diện
        div(class="inner-upload-image" image-default=detailedAccountAdmin.avatar)
          input(type="file" id="avatar" accept="image/*" filepond-image name="avatar" )
      .inner-button.inner-two-col
        button Cập nhật
    .inner-back
      a(href=`/${pathAdmin}/setting/account-admin/list`) Quay lại danh sách