extends ../layouts/default.pug



block main
  h1.box-title Tạo nhóm quyền

  .section-8
    form#setting-role-create-form
      .inner-group
        label(class="inner-label" for="name") Tên nhóm quyền
        input(type="text" id="name" name="name")
      .inner-group
        label(class="inner-label" for="description") Mô tả ngắn
        input(type="text" id="description" name="description")
      .inner-group
        label(class="inner-label") Phân quyền
        .inner-checkbox-list
          each object in permissionList
            .inner-checkbox-item
              input(type="checkbox" id = object.value name="permissions" value= object.value)
              label(for=object.value) #{object.label}
            
      .inner-button.inner-two-col
        button Tạo mới
    .inner-back
      a(href=`/${pathAdmin}/setting/role/list`) Quay lại danh sách